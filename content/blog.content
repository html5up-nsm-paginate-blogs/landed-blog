				@paginate.template
				{
					@if($[paginate.page_no])
						@replace_all(ofile, HTML5, ../assets/)

					<center>
						<div class="xscroll">
							<table style="margin-bottom:0px">
								<thead>
									<tr>
										<th style="text-align: left !important">Posts per page</th>
										<th style="text-align: left !important">Page</th>
									</tr>
								</thead>
								<tfoot>
									<tr>
										<th>
											<select id="posts_per_page_select", name="values", value="200", width="300px">
												<option selected="selected">10</option>
												<option>25</option>
												<option>50</option>
												<option>100</option>
											</select> &nbsp;&nbsp;
										</th>
										<th>
											<input id="page_tb" type="text" value="1" style="width:50px"> &nbsp;&nbsp;
										</th>
									</tr>
								</tfoot>
							</table>
						</div>

						<noselect>
							<div class="xscroll" style="margin-bottom: 10px; margin-top:-10px">
								<pagebutton onclick="first_page()" title="f key">first</pagebutton> &nbsp;
								<pagebutton onclick="prev_page()" title="left arrow key">prev</pagebutton> &nbsp;
								<pagebutton onclick="next_page()" title="right arrow key">next</pagebutton> &nbsp;
								<pagebutton onclick="last_page()" title="l key">last</pagebutton>
							</div>
						</noselect>
					</center>

					<div class="xscroll">
						<table id="posts_table">
							<thead>
								<tr>
									<th>Date</th>
									<th>Title</th>
								</tr>
							</thead>
							$[paginate.page]
							<tfoot>
								<tr>
									<th>Date</th>
									<th>Title</th>
								</tr>
							</tfoot>
						</table>
					</div>

					<center>
						<noselect>
							<div class="xscroll">
								@if{!s}($[paginate.page_no] > 1)
									<a href="@pathtopageno(1)"><pagebutton title="f key">first</pagebutton></a> &nbsp;
								@if{!s}($[paginate.page_no] > 2)
									<a href="@pathtopageno(@`$[paginate.page_no]-1`)"><pagebutton title="left arrow key">prev</pagebutton></a> &nbsp;
								@if{!s}($[paginate.page_no]+1 < $[paginate.no_pages])
									<a href="@pathtopageno(@`$[paginate.page_no]+1`)"><pagebutton title="right arrow key">next</pagebutton></a> &nbsp;
								@if{!s}($[paginate.page_no] < $[paginate.no_pages])
									<a href="@pathtopageno($[paginate.no_pages])"><pagebutton title="l key">last</pagebutton></a>
							</div>
						</noselect>
					</center>
				}

